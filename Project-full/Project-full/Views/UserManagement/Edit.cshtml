@model Osoba

@{
    ViewData["Title"] = "Editace osoby";
}

<h2>Editace osoby</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Jmeno" class="control-label"></label>
        <input asp-for="Jmeno" class="form-control" />
        <span asp-validation-for="Jmeno" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Prijmeni" class="control-label"></label>
        <input asp-for="Prijmeni" class="form-control" />
        <span asp-validation-for="Prijmeni" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" type="email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DatumNarozeni" class="control-label"></label>
        <input asp-for="DatumNarozeni" type="date" class="form-control" />
        <span asp-validation-for="DatumNarozeni" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TelefonniCislo" class="control-label"></label>
        <input asp-for="TelefonniCislo" class="form-control" />
        <span asp-validation-for="TelefonniCislo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Bonus" class="control-label"></label>
        <input asp-for="Bonus" type="number" class="form-control" />
        <span asp-validation-for="Bonus" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Uložit změny</button>
    <a asp-action="Index" class="btn btn-secondary">Zpět</a>
</form>
