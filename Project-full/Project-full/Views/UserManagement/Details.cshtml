@model Osoba

<h2>Detail uživatele</h2>

<div>

    <dl class="row">
        <dt class="col-sm-2">Jméno</dt>
        <dd class="col-sm-10">@Model.Jmeno</dd>

        <dt class="col-sm-2">Příjmení</dt>
        <dd class="col-sm-10">@Model.Prijmeni</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Datum Narození</dt>
        <dd class="col-sm-10">@Model.DatumNarozeni</dd>
        <dt class="col-sm-2">Telefonní číslo</dt>
        <dd class="col-sm-10">@Model.TelefonniCislo</dd>
        <dt class="col-sm-2">Věk</dt>
        <dd class="col-sm-10">@Model.Vek</dd>
        <dt class="col-sm-2">Bonus/Malus</dt>
        <dd class="col-sm-10">@Model.Bonus</dd>
        <dt class="col-sm-2">Seznam pojistek</dt>
        
            <table>
                <tbody>
            @foreach (var item in Model.SeznamPojisteni) {
               <tr>
				    <td> @item.Pojisteni.Nazev </td>
                    <td> @item.Expirace </td>
                </tr>
            }
                </tbody>
            </table>
       
        
    </dl>

    <div>

        <a class="btn btn-success" asp-controller="PojistneSmlouvy" asp-action="Index" asp-route-id="@Model?.Id">Upravit pojištění</a>
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Upravit osobní údaje</a> 
        <a class="btn btn-warning" asp-action="Index">Zpět na seznam</a>

    </div>
  
</div>