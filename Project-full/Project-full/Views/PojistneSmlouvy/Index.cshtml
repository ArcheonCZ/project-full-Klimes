@using System.Globalization
@model IEnumerable<Project_full.Models.PojistnaSmlouva>

@{
    ViewData["Title"] = "Index";
}


<h1>Seznam uzavřených pojistných smluv</h1>

<table class="table">
    <thead>
        <tr>
@*             <th>
                @Html.DisplayNameFor(model => model.PojistenecId)
            </th>*@
            <th> 
               <label>Typ sjednaného pojištění</label>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Expirace)
            </th>
@*             <th>
                @Html.DisplayNameFor(model => model.PojistnaUdalost)
            </th> *@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
@*             <td>
                @Html.DisplayFor(modelItem => item.PojistenecId)
            </td> *@
            <td>
                @Html.DisplayFor(modelItem => item.Pojisteni.Nazev)
            </td>
            <td>
                @* @Html.DisplayFor(modelItem => item.Expirace.Date) *@
                
                        @item.Expirace.ToString("d", CultureInfo.CreateSpecificCulture("cs-CZ"))
            </td>

            <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Prodluž pojištění</a> 
                    <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.Id">Detaily a pojistné události</a> 
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Zruš pojištění</a>
            </td>
        </tr>
}
    </tbody>
</table>

<h3>Založení nové pojistné smlouvy</h3>
<p>
    <a class="btn btn-success" asp-action="Create">Založit smlouvu</a>
</p>